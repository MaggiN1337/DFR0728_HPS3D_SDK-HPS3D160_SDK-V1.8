    {
        "id": "mqtt_in",
        "type": "mqtt in",
        "z": "hps3d_flow",
        "name": "LIDAR Measurements",
        "topic": "hps3d/measurements",
        "qos": "0",
        "datatype": "json",
        "broker": "mqtt_broker",
        "nl": false,
        "rap": true,
        "x": 150,
        "y": 100,
        "wires": [["process_measurements"]]
    },
    {
        "id": "process_measurements",
        "type": "function",
        "z": "hps3d_flow",
        "name": "Process Points",
        "func": "// Extrahiere die Messwerte\nconst points = msg.payload.measurements;\n\n// Erstelle f√ºr jeden Punkt einen eigenen Gauge\nfor (const [name, data] of Object.entries(points)) {\n    const pointMsg = {\n        topic: name,\n        payload: data.distance_mm,\n        valid: data.valid,\n        min: data.min_distance_mm,\n        max: data.max_distance_mm,\n        timestamp: msg.payload.timestamp\n    };\n    \n    // Sende an den entsprechenden Gauge und Chart\n    node.send([pointMsg, pointMsg]);\n}\n",
        "outputs": 2,
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 350,
        "y": 100,
        "wires": [["point_gauges"], ["point_charts"]]
    },
    {
        "id": "point_gauges",
        "type": "ui_gauge",
        "z": "hps3d_flow",
        "name": "Point Distance",
        "group": "g-lidar",
        "order": 1,
        "width": "3",
        "height": "3",
        "gtype": "gage",
        "title": "#{topic}",
        "label": "mm",
        "format": "{{value}}",
        "min": 0,
        "max": "1000",
        "colors": ["#00b500","#e6e600","#ca3838"],
        "seg1": "",
        "seg2": "",
        "diff": false,
        "className": "",
        "x": 550,
        "y": 100,
        "wires": []
    },
    {
        "id": "point_charts",
        "type": "ui_chart",
        "z": "hps3d_flow",
